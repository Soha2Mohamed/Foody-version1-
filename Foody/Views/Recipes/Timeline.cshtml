@model IEnumerable<Recipe>

<h2>Top Rated Recipes</h2>

<div class="top-recipes">
    @foreach (var recipe in Model)
    {
        <div class="recipe-item">
            <h3>@recipe.Name</h3>
            <img src="~/RecipesUploads/@recipe.RecipePicture" alt="@recipe.Name" width="200" />
            <p>@recipe.Description</p>
            <p>@recipe.Id</p>
            <p>Average Rating: @recipe.RatingAverage</p>
            <a href="@Url.Action("ViewRecipe",  new { id = recipe.Id })">View Recipe</a>
            <a href="@Url.Action("RateRecipe",  new { id = recipe.Id })">Rate Recipe</a>
            <form asp-action="AddToCookLater" method="post">
                <input type="hidden" name="id" value="@recipe.Id" />
                <button type="submit" class="btn btn-primary">Add to Cook Later</button>
            </form>


            


        </div>
    }
</div>
